<%- include('../includes/head', { pageTitle: "Admin Dashboard" }) %>
<link rel="stylesheet" href="/styles/header.css">
<link rel="stylesheet" href="/styles/footer.css">
<link rel="stylesheet" href="/styles/admin-dashboard.css">
</head>
<body class="admin-dashboard">
    <%- include('../includes/header') %>   
  
    <!-- Main Content -->
    <main class="admin-main">
        <!-- Dashboard Header -->
        <div class="admin-header">
            <div>
                <h1 class="admin-title">
                    <span class="admin-title-gradient">Admin Dashboard</span>
                </h1>
                <p class="admin-subtitle">Manage your learning platform with precision</p>
            </div>
            <div class="admin-status">
                <div class="admin-status-indicator"></div>
                <span class="admin-status-text">Admin Mode Active</span>
            </div>
        </div>

        <!-- Stats Overview -->
        <div class="admin-stats-grid">
            <div class="admin-stat-card admin-stat-card--users">
                <div class="admin-stat-label">Total Users</div>
                <div class="admin-stat-value">1,248</div>
                <div class="admin-stat-trend">â†‘ 12% this month</div>
            </div>
            <div class="admin-stat-card admin-stat-card--courses">
                <div class="admin-stat-label">Active Courses</div>
                <div class="admin-stat-value">47</div>
                <div class="admin-stat-trend">â†‘ 3 new this week</div>
            </div>
            <div class="admin-stat-card admin-stat-card--approvals">
                <div class="admin-stat-label">Pending Approvals</div>
                <div class="admin-stat-value">12</div>
                <div class="admin-stat-trend admin-stat-trend--warning">Requires attention</div>
            </div>
            <div class="admin-stat-card admin-stat-card--health">
                <div class="admin-stat-label">System Health</div>
                <div class="admin-stat-value">100%</div>
                <div class="admin-stat-trend">All systems normal</div>
            </div>
        </div>

        <!-- User Management -->
        <section class="admin-section">
            <div class="admin-section-header">
                <h2 class="admin-section-title">
                    <span class="admin-section-icon admin-section-icon--users">ðŸ‘¥</span>
                    User Management
                </h2>
            </div>
            <div class="admin-section-content">
                <form class="admin-search-form">
                    <input type="text" placeholder="Search users..." class="admin-search-input"/>
                    <select class="admin-select">
                        <option>All Roles</option>
                        <option>Student</option>
                        <option>Instructor</option>
                        <option>Admin</option>
                    </select>
                    <select class="admin-select">
                        <option>All Statuses</option>
                        <option>Active</option>
                        <option>Suspended</option>
                    </select>
                    <button class="admin-search-button">
                        Search Users
                    </button>
                </form>

                <!-- User Table -->
                <div class="admin-table-container">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th class="admin-table-header">Name</th>
                                <th class="admin-table-header">Email</th>
                                <th class="admin-table-header">Role</th>
                                <th class="admin-table-header">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="admin-table-row">
                                <td class="admin-table-cell">
                                    <div class="admin-user-cell">
                                        <div class="admin-user-avatar">AM</div>
                                        <div class="admin-user-info">
                                            <div class="admin-user-name">Ayesha Malik</div>
                                            <div class="admin-user-username">@ayesha_m</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="admin-table-cell">ayesha@example.com</td>
                                <td class="admin-table-cell">
                                    <span class="admin-role-badge admin-role-badge--student">Student</span>
                                </td>
                                <td class="admin-table-cell">
                                    <button class="admin-action-button admin-action-button--edit">Edit</button>
                                    <button class="admin-action-button admin-action-button--suspend">Suspend</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

        <!-- Course Management -->
        <section class="admin-section">
            <div class="admin-section-header">
                <h2 class="admin-section-title">
                    <span class="admin-section-icon admin-section-icon--courses">ðŸ“š</span>
                    Course Control
                </h2>
            </div>
            <div class="admin-section-content">
                <div class="admin-course-grid">
                    <div class="admin-course-form">
                        <h3 class="admin-subsection-title">Create New Course</h3>
                        <input type="text" placeholder="Course Title" class="admin-input"/>
                        <select class="admin-select">
                            <option>Select Instructor</option>
                            <option>Prof. Ahmed Raza</option>
                            <option>Dr. Fatima Khan</option>
                        </select>
                        <textarea placeholder="Course Description" rows="4" class="admin-textarea"></textarea>
                        <button class="admin-submit-button">
                            Create Course
                        </button>
                    </div>
                    <div class="admin-course-list">
                        <h3 class="admin-subsection-title">Existing Courses</h3>
                        <div class="admin-course-list-container">
                            <div class="admin-course-item">
                                <div>
                                    <div class="admin-course-name">OOP Fundamentals</div>
                                    <div class="admin-course-instructor">Prof. Ahmed Raza</div>
                                </div>
                                <div class="admin-course-actions">
                                    <button class="admin-action-button admin-action-button--edit">Edit</button>
                                    <button class="admin-action-button admin-action-button--delete">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Content Approvals -->
        <section class="admin-section">
            <div class="admin-section-header">
                <h2 class="admin-section-title">
                    <span class="admin-section-icon admin-section-icon--approvals">âœ…</span>
                    Pending Approvals
                </h2>
            </div>
            <div class="admin-section-content">
                <div class="admin-approval-list">
                    <div class="admin-approval-item">
                        <div>
                            <div class="admin-approval-title">"Data Structures - Chapter 5"</div>
                            <div class="admin-approval-meta">Submitted by Prof. Ahmed Raza â€¢ 2 days ago</div>
                        </div>
                        <div class="admin-approval-actions">
                            <button class="admin-approval-button admin-approval-button--approve">Approve</button>
                            <button class="admin-approval-button admin-approval-button--reject">Reject</button>
                            <button class="admin-approval-button admin-approval-button--preview">Preview</button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- System Reports -->
        <section class="admin-section">
            <div class="admin-section-header">
                <h2 class="admin-section-title">
                    <span class="admin-section-icon admin-section-icon--reports">ðŸ“Š</span>
                    System Reports
                </h2>
            </div>
            <div class="admin-section-content">
                <div class="admin-reports-grid">
                    <div class="admin-reports-column">
                        <h3 class="admin-subsection-title">Export Data</h3>
                        <div class="admin-export-list">
                            <button class="admin-export-button">
                                <span>User Data (CSV)</span>
                                <svg class="admin-export-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                                </svg>
                            </button>
                            <button class="admin-export-button">
                                <span>Course Analytics (PDF)</span>
                                <svg class="admin-export-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                                </svg>
                            </button>
                        </div>
                    </div>
                    <div class="admin-reports-column">
                        <h3 class="admin-subsection-title">Recent Activity</h3>
                        <div class="admin-activity-list">
                            <div class="admin-activity-item">
                                <div class="admin-activity-text">New user registration: <span class="admin-activity-highlight">Zara Khan</span></div>
                                <div class="admin-activity-time">10 minutes ago</div>
                            </div>
                            <div class="admin-activity-item">
                                <div class="admin-activity-text">Course updated: <span class="admin-activity-highlight admin-activity-highlight--success">OOP Fundamentals</span></div>
                                <div class="admin-activity-time">2 hours ago</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Status Message -->
        <div class="admin-status-message">
            <div class="admin-status-icon"></div>
            <div>
                <h4 class="admin-status-title">System is operating normally</h4>
                <p class="admin-status-description">All services are running smoothly. Last updated: Just now</p>
            </div>
        </div>
    </main>

    <%- include('../includes/footer') %>
</body>
</html>