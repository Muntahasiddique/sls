<%- include('../includes/head', { pageTitle: "Courses" }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="courses-page">
<%- include('../includes/header') %>   

<main class="courses-main">
  <!-- Enhanced Background Glow -->
  <div class="courses-glow-background">
    <div class="courses-glow-circle courses-glow-circle--left"></div>
    <div class="courses-glow-circle courses-glow-circle--right"></div>
    <div class="courses-glow-circle courses-glow-circle--center"></div>
  </div>

  <!-- Content Wrapper -->
  <div class="courses-content-wrapper">
    <!-- Search Heading -->
    <div class="courses-search-heading">
      <div class="courses-rocket-icon">
        <img src="/images/undraw_to-the-stars_tz9v.svg" alt="Rocket Icon" class="courses-rocket-image" />
      </div>
      <div class="courses-heading-content">
        <h2 class="courses-main-heading">
          <span class="glitch-text" data-text="Explore Courses to Level Up">Explore Courses to Level Up</span>
        </h2>
        <p class="courses-subheading">Search by course, topic, or degree to unlock your next step.</p>
      </div>
    </div>

    <!-- Enhanced Search Bar -->
    <div class="courses-search-container">
      <div class="courses-search-bar">
        <div class="courses-search-icon">
          <i class="fas fa-search"></i>
        </div>
        <input
          type="text"
          placeholder="Search by course, topic, or degree..."
          class="courses-search-input"
        />
        <button class="courses-search-button">
          <i class="fas fa-arrow-right"></i>
        </button>
      </div>
    </div>

    <!-- Filters Section -->
    <section class="courses-filters-section">
      <h3 class="courses-filters-heading">
        <i class="fas fa-sliders-h courses-filters-icon"></i> 
        <span class="glitch-text" data-text="Filter Courses">Filter Courses</span>
      </h3>
      
      <div class="courses-filters-grid">
        <!-- Enhanced Filter Cards -->
        <div class="courses-filter-card">
          <div class="filter-card-header">
            <div class="filter-icon-wrapper">
              <i class="fas fa-graduation-cap"></i>
            </div>
            <label for="degree" class="courses-filter-label">Degree Program</label>
          </div>
          <select id="degree" class="courses-filter-select courses-filter-select--degree">
            <option disabled selected>Select a degree</option>
            <option>BS Computer Science</option>
            <option>BS Data Science</option>
            <option>BS AI</option>
            <option>MS Computer Science</option>
          </select>
        </div>

        <div class="courses-filter-card">
          <div class="filter-card-header">
            <div class="filter-icon-wrapper">
              <i class="fas fa-chart-line"></i>
            </div>
            <label for="difficulty" class="courses-filter-label">Difficulty Level</label>
          </div>
          <select id="difficulty" class="courses-filter-select courses-filter-select--difficulty">
            <option disabled selected>Select difficulty</option>
            <option>Beginner</option>
            <option>Intermediate</option>
            <option>Advanced</option>
          </select>
        </div>

        <div class="courses-filter-card">
          <div class="filter-card-header">
            <div class="filter-icon-wrapper">
              <i class="fas fa-book-open"></i>
            </div>
            <label for="category" class="courses-filter-label">Category</label>
          </div>
          <select id="category" class="courses-filter-select courses-filter-select--category">
            <option disabled selected>Choose a subject</option>
            <option>Programming</option>
            <option>Machine Learning</option>
            <option>Data Analysis</option>
            <option>Cloud Computing</option>
            <option>Cybersecurity</option>
          </select>
        </div>

        <div class="courses-filter-card">
          <div class="filter-card-header">
            <div class="filter-icon-wrapper">
              <i class="fas fa-tags"></i>
            </div>
            <label for="price" class="courses-filter-label">Price Range</label>
          </div>
          <select id="price" class="courses-filter-select courses-filter-select--price">
            <option disabled selected>Choose price</option>
            <option>Free</option>
            <option>Premium</option>
          </select>
        </div>
      </div>
    </section>

    <!-- Courses Grid Section -->
    <section class="courses-grid-section">
      <h3 class="courses-grid-heading">
        <i class="fas fa-star"></i> Featured Courses
      </h3>
      
      <div class="courses-grid">
        <!-- Course Card 1 -->
        <div class="course-card">
          <div class="course-card-badge">BESTSELLER</div>
          <div class="course-card-header">
            <div class="course-card-icon">
              <i class="fas fa-project-diagram"></i>
            </div>
            <h4 class="course-card-title">Data Structures & Algorithms</h4>
          </div>
          <p class="course-card-description">Master the building blocks of computer science and efficient problem-solving techniques.</p>
          <div class="course-card-meta">
            <span><i class="fas fa-clock"></i> 42h</span>
            <span><i class="fas fa-user-graduate"></i> 2.1K+</span>
            <span><i class="fas fa-star"></i> 4.9</span>
          </div>
          <div class="course-card-actions">
            <button class="course-action-btn course-action-btn--view">
              <i class="fas fa-eye"></i> Preview
            </button>
            <button class="course-action-btn course-action-btn--enroll">
              <i class="fas fa-bolt"></i> Enroll
            </button>
          </div>
          <a href="#" class="course-card-link">
            <i class="fas fa-download"></i> Syllabus
          </a>
        </div>
        
        <!-- Course Card 2 -->
        <div class="course-card">
          <div class="course-card-badge">NEW</div>
          <div class="course-card-header">
            <div class="course-card-icon">
              <i class="fas fa-code"></i>
            </div>
            <h4 class="course-card-title">Web Development</h4>
          </div>
          <p class="course-card-description">HTML, CSS, JavaScript & modern web tools for building responsive applications.</p>
          <div class="course-card-meta">
            <span><i class="fas fa-clock"></i> 36h</span>
            <span><i class="fas fa-user-graduate"></i> 3.5K+</span>
            <span><i class="fas fa-star"></i> 4.8</span>
          </div>
          <div class="course-card-actions">
            <button class="course-action-btn course-action-btn--view">
              <i class="fas fa-eye"></i> Preview
            </button>
            <button class="course-action-btn course-action-btn--enroll">
              <i class="fas fa-bolt"></i> Enroll
            </button>
          </div>
          <a href="#" class="course-card-link">
            <i class="fas fa-download"></i> Syllabus
          </a>
        </div>
        
        <!-- Course Card 3 -->
        <div class="course-card">
          <div class="course-card-header">
            <div class="course-card-icon">
              <i class="fas fa-cubes"></i>
            </div>
            <h4 class="course-card-title">Object-Oriented Programming</h4>
          </div>
          <p class="course-card-description">Design scalable and reusable software systems with OOP principles.</p>
          <div class="course-card-meta">
            <span><i class="fas fa-clock"></i> 30h</span>
            <span><i class="fas fa-user-graduate"></i> 1.8K+</span>
            <span><i class="fas fa-star"></i> 4.7</span>
          </div>
          <div class="course-card-actions">
            <button class="course-action-btn course-action-btn--view">
              <i class="fas fa-eye"></i> Preview
            </button>
            <button class="course-action-btn course-action-btn--enroll">
              <i class="fas fa-bolt"></i> Enroll
            </button>
          </div>
          <a href="#" class="course-card-link">
            <i class="fas fa-download"></i> Syllabus
          </a>
        </div>
      </div>
    </section>

    <!-- Empty State (Hidden when courses are shown) -->
    <section class="courses-empty-state" style="display: none;">
      <div class="courses-empty-icon">
        <i class="fas fa-search"></i>
      </div>
      <h4 class="courses-empty-title">No results found</h4>
      <p class="courses-empty-message">Try adjusting your filters or search keywords</p>
      <button class="courses-empty-button">
        Reset Filters
      </button>
    </section>
  </div>
</main>

<%- include('../includes/footer') %>
