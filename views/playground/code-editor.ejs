<%- include('../includes/head', { pageTitle: "code-editor" }) %>

</head>
<body class="code-editor-body">
    <%- include('../includes/header') %>   

    <main class="code-editor-main">

        <!-- Floating Astronaut Animation -->
        <div class="floating-astronaut-container">
            <img src="/images/undraw_code-review_ept3.svg" alt="Floating Astronaut"
                 class="floating-astronaut" />
        </div>

        <!-- Header with Gradient Accent -->
        <div class="editor-header">
            <div class="gradient-accent">
                <span class="emoji-icon">üë®‚Äçüíª</span>
            </div>
            <h2 class="header-title">
                <span class="gradient-text">
                    Interactive Code Lab
                </span>
                <span class="header-subtitle">Practice Makes Perfect</span>
            </h2>
        </div>

        <!-- Editor Panel -->
        <div class="editor-panel">
            <label for="code" class="editor-label">Code Editor</label>
            <textarea 
                id="code" 
                rows="12" 
                placeholder="// Write your code here‚Ä¶" 
                class="code-textarea"
                spellcheck="false">
            </textarea>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <button 
                    title="Clear the editor to start fresh" 
                    class="reset-button">
                    Reset
                </button>
                <button 
                    title="Run your code and see output below" 
                    class="run-button">
                    Run Code
                </button>
            </div>

            <!-- Output Console -->
            <div class="output-console">
                <label class="console-label">Output Console</label>
                <div class="console-output success">
                    ‚úÖ Code executed successfully!
                    <br><br>
                    Hello, world!
                </div>
            </div>
        </div>

        <div class="language-selector-container">
            <label class="language-selector-label">Programming Language</label>
            <select class="language-selector-dropdown">
                <option class="language-option">JavaScript</option>
                <option class="language-option">Python</option>
                <option class="language-option">Java</option>
                <option class="language-option">C++</option>
                <option class="language-option">Go</option>
            </select>
        </div>
    </main>

    <%- include('../includes/footer') %>
</body>
</html>