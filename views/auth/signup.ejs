<%- include('../includes/head', { pageTitle: "Sign Up" }) %>


</head>
<body class="signup-page">
    <%- include('../includes/header' ) %>   
<main class="signup-main">
    <!-- Background Wrapper -->
    <div class="signup-wrapper">
        <!-- Background Image -->
        <img src="/images/photo-1715538859909-914de12746b8.avif" alt="Background" class="signup-bg-image" />

        <!-- Aurora Glow Overlay -->
        <div class="signup-glow-overlay">
            <div class="signup-glow-circle signup-glow-circle--left"></div>
            <div class="signup-glow-circle signup-glow-circle--right"></div>
        </div>

        <!-- Signup Card -->
        <div class="signup-card">
            <h2 class="signup-title">
                Join thousands of learners building their future.
            </h2>

            <form id="signupForm" class="signup-form">
                <!-- Email Field -->
                <div class="signup-input-group">
                    <label class="signup-label">Email Address</label>
                    <div class="signup-input-container">
                        <input type="email" id="signupEmail" placeholder="you@example.com" class="signup-input" />
                        <i class="fas fa-envelope signup-input-icon signup-input-icon--email"></i>
                    </div>
                    <p class="signup-error-message" id="signupEmailError">⚠️ Please enter a valid email.</p>
                </div>

                <!-- Password Field -->
                <div class="signup-input-group">
                    <label class="signup-label">Password</label>
                    <div class="signup-input-container">
                        <input type="password" id="signupPassword" placeholder="Must be at least 8 characters" class="signup-input" />
                        <i class="fas fa-lock signup-input-icon signup-input-icon--password"></i>
                    </div>
                    <p class="signup-hint">Use a mix of letters, numbers, and symbols for a strong password.</p>
                    <p class="signup-error-message" id="signupPasswordError">⚠️ Password must be at least 8 characters.</p>
                </div>

                <!-- Confirm Password Field -->
                <div class="signup-input-group">
                    <label class="signup-label">Confirm Password</label>
                    <div class="signup-input-container">
                        <input type="password" id="confirmPassword" placeholder="Re-type your password" class="signup-input" />
                        <i class="fas fa-lock signup-input-icon signup-input-icon--confirm"></i>
                    </div>
                    <p class="signup-error-message" id="confirmPasswordError">⚠️ Passwords do not match.</p>
                </div>

                <!-- Sign Up Button -->
                <button type="submit" class="signup-submit-button">
                    Sign Up & Start Learning
                </button>
            </form>

            <p class="signup-login-text">
                Already have an account?
                <a href="login.html" class="signup-login-link">Log In</a>
            </p>

            <p class="signup-error-message signup-error-message--required" id="signupRequiredError">⚠️ All fields are required.</p>
            <p class="signup-success-message" id="signupSuccess">✅ Account created successfully. Let's get started!</p>
        </div>
    </div>
</main>
<%- include('../includes/footer' ) %>