<%- include('../includes/head', { pageTitle: "Login" }) %>

</head>
<body class="login-page">
    <%- include('../includes/header' ) %>   
<main class="login-main">
    <!-- Background Wrapper -->
    <div class="login-wrapper">
        <!-- Background Image Overlay -->
        <img src="/images/photo-1715538859909-914de12746b8.avif" alt="Background" class="login-bg-image" />
      
        <!-- Aurora Glow Overlay -->
        <div class="login-glow-overlay">
          <div class="login-glow-circle login-glow-circle--left"></div>
          <div class="login-glow-circle login-glow-circle--right"></div>
        </div>
      
        <!-- Login Card -->
        <div class="login-card">
          <h2 class="login-title">
            Welcome back! Ready to keep learning?
          </h2>
      
          <form id="loginForm" class="login-form">
            <!-- Email -->
            <div class="login-input-group">
              <label class="login-label">Email Address</label>
              <div class="login-input-container">
                <input type="email" id="loginEmail" placeholder="you@example.com" class="login-input" />
                <i class="fas fa-envelope login-input-icon login-input-icon--email"></i>
              </div>
              <p class="login-error-message" id="loginEmailError">⚠️ Please enter a valid email.</p>
            </div>
      
            <!-- Password -->
            <div class="login-input-group">
              <label class="login-label">Password</label>
              <div class="login-input-container">
                <input type="password" id="loginPassword" placeholder="Must be at least 8 characters" class="login-input" />
                <i class="fas fa-lock login-input-icon login-input-icon--password"></i>
              </div>
              <p class="login-hint">Use a mix of letters, numbers, and symbols for a strong password.</p>
              <p class="login-error-message" id="loginPasswordError">⚠️ Password must be at least 8 characters.</p>
            </div>
      
            <!-- Submit -->
            <button type="submit" class="login-submit-button">
              Log In
            </button>
          </form>
      
          <p class="login-signup-text">
            Don't have an account?
            <a href="signup.html" class="login-signup-link">Sign Up</a>
          </p>
      
          <p class="login-success-message" id="loginSuccess">✅ Welcome back! Redirecting to your dashboard...</p>
        </div>
    </div>
</main>
<%- include('../includes/footer' ) %>