<header class="header">
  <!-- Aurora Background -->
  <div class="header__aurora">
    <div class="header__aurora--left"></div>
    <div class="header__aurora--right"></div>
    <div class="header__aurora--center"></div>
  </div>

  <div class="header__container">
    <!-- Logo -->
    <a href="/" class="header__logo">
      <div class="header__logo-icon">
        <i class="fas fa-graduation-cap"></i>
      </div>
      <span class="header__logo-text">SLS</span>
    </a>

    <!-- Mobile Menu Button (visible on small screens) -->
    <button class="header__mobile-menu" aria-label="Toggle menu">
      <span class="header__mobile-menu-icon"></span>
    </button>

    <!-- Desktop Navigation (hidden on mobile) -->
    <nav class="header__nav">
      <a href="/" class="header__nav-link">
        <i class="fas fa-home"></i> <span class="nav-text">Home</span>
        <span class="header__nav-underline"></span>
      </a>
      <a href="/degree" class="header__nav-link">
        <i class="fas fa-university"></i> <span class="nav-text">Degrees</span>
        <span class="header__nav-underline"></span>
      </a>
      <a href="/courses" class="header__nav-link">
        <i class="fas fa-book-open"></i> <span class="nav-text">Courses</span>
        <span class="header__nav-underline"></span>
      </a>
      <a href="/forum" class="header__nav-link">
        <i class="fas fa-comments"></i> <span class="nav-text">Forum</span>
        <span class="header__nav-underline"></span>
      </a>
      <a href="/editor" class="header__nav-link">
        <i class="fas fa-code"></i> <span class="nav-text">Playground</span>
        <span class="header__nav-underline"></span>
      </a>
    </nav>

    <!-- Desktop Actions (hidden on mobile) -->
    <div class="header__actions">
      <!-- Theme Toggle -->
      <div class="header__theme-toggle" onclick="toggleDarkMode()">
        
        <div class="header__theme-thumb"><i class="fas fa-moon " id="moon"></i></div>
      </div>

      <!-- Login -->
      <a href="/login" class="header__login">
        <i class="fas fa-sign-in-alt"></i> <span class="login-text">Log In</span>
      </a>

      <!-- Sign Up -->
      <a href="/signup" class="header__signup">
        <span class="header__signup-glow"></span>
        <span class="header__signup-text">Sign Up Free</span>
        <i class="fas fa-arrow-right"></i>
      </a>
    </div>
  </div>

  <!-- Mobile Navigation Menu (hidden by default) -->
  <div class="header__mobile-nav">
    <a href="/" class="header__mobile-nav-link">
      <i class="fas fa-home"></i> Home
    </a>
    <a href="/degrees" class="header__mobile-nav-link">
      <i class="fas fa-university"></i> Degrees
    </a>
    <a href="/courses" class="header__mobile-nav-link">
      <i class="fas fa-book-open"></i> Courses
    </a>
    <a href="/forum" class="header__mobile-nav-link">
      <i class="fas fa-comments"></i> Forum
    </a>
    <a href="/playground" class="header__mobile-nav-link">
      <i class="fas fa-code"></i> Playground
    </a>
    <div class="header__mobile-actions">
      <div class="header__mobile-theme-toggle" onclick="toggleDarkMode()">
        <i class="fas fa-moon"></i> Toggle Theme
      </div>
      <a href="/login" class="header__mobile-login">
        <i class="fas fa-sign-in-alt"></i> Log In
      </a>
      <a href="/signup" class="header__mobile-signup">
        <i class="fas fa-user-plus"></i> Sign Up Free
      </a>
    </div>
  </div>
</header>